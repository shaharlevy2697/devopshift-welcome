pipeline {
    agent any
    environment {
        IMAGE_NAME = 'devopscurse'
        VERSION = "v${env.BUILD_NUMBER}"
        REPO = 'sasnow'
        CREDENTIALS_ID = 'docker-credentials'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'pwd && df -h'
                    sh 'docker build --target build --tag ${IMAGE_NAME}:${VERSION}-build -f welcome/app/bookinfo/src/ratings/Dockerfile welcome/app/bookinfo/src/ratings'
                    sh 'docker images' 
                }
            }
        }
        stage('Lint/Test') {
            steps {
                script {
                    sh 'docker build --target 'lint/test' --tag ${IMAGE_NAME}:${VERSION}-lint/test -f welcome/app/bookinfo/src/ratings/Dockerfile welcome/app/bookinfo/src/ratings'
                    sh 'docker run --rm ${IMAGE_NAME}:${VERSION}-test'
                    }
                }
            }
        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${CREDENTIALS_ID}") {
                        sh 'docker tag ${IMAGE_NAME}:${VERSION}-build ${REPO}/${IMAGE_NAME}:${VERSION}-build'
                        sh 'docker push ${REPO}/${IMAGE_NAME}:${VERSION}-build' 
                    }
                }
            }
        }
    }
}
